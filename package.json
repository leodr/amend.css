{
    "name": "quicket.css",
    "version": "1.0.0",
    "license": "MIT",
    "author": "Leonhard Driesch",
    "scripts": {
        "build": "next build",
        "build-dev": "cross-env NODE_ENV=development postcss src/index.css -o dist/index.css",
        "build-prod": "cross-env NODE_ENV=production postcss src/index.css -o dist/index.min.css",
        "build-website": "parcel build website/index.html",
        "dev": "next",
        "format": "prettier . --write",
        "prepublishOnly": "yarn build",
        "start": "next start"
    },
    "prettier": {
        "proseWrap": "always",
        "tabWidth": 4
    },
    "dependencies": {
        "@mdx-js/loader": "^2.0.0-next.8",
        "@next/mdx": "^9.5.5",
        "next": "^9.5.5",
        "react": "^16.14.0",
        "react-dom": "^16.14.0"
    },
    "devDependencies": {
        "@tailwindcss/custom-forms": "^0.2.1",
        "@tailwindcss/typography": "^0.2.0",
        "@typescript-eslint/eslint-plugin": "2.x",
        "@typescript-eslint/parser": "2.x",
        "babel-eslint": "10.x",
        "cross-env": "^7.0.2",
        "cssnano": "^4.1.10",
        "eslint": "6.x",
        "eslint-config-react-app": "^5.2.1",
        "eslint-plugin-flowtype": "4.x",
        "eslint-plugin-import": "2.x",
        "eslint-plugin-jsx-a11y": "6.x",
        "eslint-plugin-react": "7.x",
        "eslint-plugin-react-hooks": "2.x",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.0.0-beta.1",
        "postcss": "^8.1.1",
        "postcss-cli": "^8.1.0",
        "postcss-import": "^12.0.1",
        "postcss-nesting": "^7.0.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.1.2",
        "prettier-plugin-packagejson": "^2.2.6",
        "tailwindcss": "^1.9.3"
    }
}
